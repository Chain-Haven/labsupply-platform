# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_BASE_URL=http://localhost:3000

# Mercury Banking API (only MERCURY_API_TOKEN is required)
MERCURY_API_TOKEN=your-mercury-api-token
# Optional: Override auto-discovered deposit account (auto-selects first checking account if not set)
# MERCURY_ACCOUNT_ID=your-mercury-checking-account-id
# Optional: Set automatically via Admin > Mercury > Setup Webhook button
# MERCURY_WEBHOOK_SECRET=your-mercury-webhook-secret

# Workflow Engine (Inngest)
INNGEST_EVENT_KEY=your-inngest-event-key
INNGEST_SIGNING_KEY=your-inngest-signing-key

# Optional: QStash for webhook buffering
QSTASH_URL=https://qstash.upstash.io
QSTASH_TOKEN=your-qstash-token
QSTASH_CURRENT_SIGNING_KEY=your-current-signing-key
QSTASH_NEXT_SIGNING_KEY=your-next-signing-key

# Optional: Shipping Provider (EasyPost)
EASYPOST_API_KEY=your-easypost-api-key
SHIPPING_PROVIDER=stub

# Optional: PrintNode for label printing
PRINTNODE_API_KEY=your-printnode-api-key

# Optional: Sentry for error tracking
SENTRY_DSN=your-sentry-dsn

# Security
HMAC_SECRET_KEY=generate-a-32-byte-random-hex-string
JWT_SECRET=generate-a-secure-jwt-secret

# Plugin API (for WooCommerce plugin callbacks)
PLUGIN_CALLBACK_SECRET=generate-a-secure-callback-secret
