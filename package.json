{
    "name": "labsupply-platform",
    "version": "1.1.0",
    "private": true,
    "description": "Supplier + Merchant Integration Platform for Research Compounds",
    "scripts": {
        "dev": "npm run dev:portal",
        "dev:portal": "npm --prefix apps/portal run dev",
        "dev:api": "npm --prefix apps/api run dev",
        "build": "npm run build:shared && npm run build:portal",
        "build:shared": "npm --prefix packages/shared run build",
        "build:portal": "npm --prefix apps/portal run build",
        "test": "npm --prefix packages/shared run test",
        "lint": "turbo run lint",
        "typecheck": "turbo run typecheck",
        "clean": "turbo run clean"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "turbo": "^2.0.0",
        "typescript": "^5.3.0",
        "eslint": "^8.55.0",
        "prettier": "^3.1.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}