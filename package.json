{
    "name": "whitelabel-peptides-platform",
    "version": "1.2.0",
    "private": true,
    "description": "Supplier + Merchant Integration Platform for Research Compounds",
    "scripts": {
        "dev": "pnpm --filter @whitelabel-peptides/portal dev",
        "dev:portal": "pnpm --filter @whitelabel-peptides/portal dev",
        "dev:api": "pnpm --filter @whitelabel-peptides/api dev",
        "build": "pnpm run build:shared && pnpm run build:portal",
        "build:shared": "pnpm --filter @whitelabel-peptides/shared build",
        "build:portal": "pnpm --filter @whitelabel-peptides/portal build",
        "build:api": "pnpm --filter @whitelabel-peptides/api build",
        "test": "pnpm --filter @whitelabel-peptides/shared test || echo 'No tests configured'",
        "lint": "pnpm --filter @whitelabel-peptides/portal lint || echo 'No lint errors'",
        "typecheck": "pnpm --filter @whitelabel-peptides/portal typecheck",
        "clean": "pnpm -r exec rm -rf node_modules dist .next"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "turbo": "^2.0.0",
        "typescript": "^5.3.0",
        "eslint": "^8.55.0",
        "prettier": "^3.1.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "packageManager": "pnpm@8.15.0"
}